<div class="container text-center" style="margin-right: 100px; margin-left: 100px;">
  <div class="row row-cols-4" style="width: 1600px;">
    <% @cars.each do |car|%>
      <div class="col" style="margin-bottom: 0.7rem; margin-top: 0.7rem;">
        <div class="card text-bg-light mb-3" style="width: 290px;margin-top: 16px;margin-left: 42px;margin-right: 0rem;">
          <%= link_to(car)  do %>
          <% if car.images.attached?  %>
            <div class="col align-self-start" style="width: 18rem;">
              <%= image_tag car.images.first, width: "300px", height: "210px", class:"card-img-top"%>
            </div>
          <% else %>
            <p>Please insert images</p>
          <% end %>
          <% end %>
          <div class="card-body">
            <p class="card-title">Brand: <%= car.brand%></p>
            <p class="card-text">Model: <%= car.model%> </p>
            <p class="card-text">Price: <%= car.price%> </p> 
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

