<%= form_for @car do |form| %>
 <% if @car.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@car.errors.count, "error") %> Prohibited this Customer from being saved:</h2>

    <ul>
      <% @car.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %> 
  </div class="form-check">
  <%= form.label :brand%>
  <%= form.select :brand, ['Tata', 'Mahindra','Force','Honda', 'Hyundai', 'Kia', 'MG']%><br>
  <div>

