    <%= form.label :fuel_type,  "Diesel"%>
    <%= form.radio_button :fuel_type, 'Diesel' %><br>

    <%= form.label :fuel_type,  "Hydrogen"%>
    <%= form.radio_button :fuel_type, 'Hydrogen' %><br>

    <%= form.label :fuel_type,  "Alcohol"%>
