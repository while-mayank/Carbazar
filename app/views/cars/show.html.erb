<div>
  <p> <em> Seller: <%= @car.user.user_name %> </em></p>
</div>

</div>
<p>Company: <%= @car.brand%> </p>
<div>

<div class="field">
  <p>Model: <%= @car.model %></p>
  
</div>

<div class="field">
  <p>Price: <%= @car.price %></p>
</div>

<div class="field">
  <p>manufacture Year: <%= @car.manufacture_year %></p>
</div>

<div>
  <p>Fuel Variant: <%= @car.fuel_type.map { |fuel_type| fuel_type.capitalize }.to_sentence %></p>
</div>

<div>
  <% if @car.images.attached?  %>
    <% @car.images.each do |image| %>
      <div class="col align-self-start">
         <%= image_tag image, width: "300px", height: "210px"%>
      </div>
    <% end %> 
  <% else %>
    <p>Please insert images</p>
  <% end %> 
</div>

<div>
  <% if Like.where(user: current_user.id, likeable_id: @car.id).present? == true %>
  <p>👍 
  <%= link_to "👎", likes_path(car_id: @car.id,like_id:@like),:method => :delete %> </p>
  <% elsif  Like.where(user: current_user.id, likeable_id: @car.id).present? == false%>
  <p><%= link_to "👍", likes_path(car_id: @car.id), :method => :post %>
   👎</p>
   <% else %>
   <%= link_to "👍", likes_path(car_id: @car.id), :method => :post %>
   <%= link_to "👎", likes_path(car_id: @car.id,like_id:@like),:method => :delete %>
  <% end %>
  <em><%= @car.likes.count%></em><br>  
</div>

<% if current_user.id == @car.user_id %>
<ul>
  <li><%= link_to "Edit", edit_car_path(@car) %></li>
  <li><%= link_to "Destroy", car_path(@car),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %></li>
</ul>
<% end %>
<h2>Reviews</h2>
<%= render 'reviews/reviews'  %>


<h2>Add a review:</h2>
<%= render "reviews/form" %>

